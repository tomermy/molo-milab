<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.molo.tomermai.moloalpha.ResultClassActivity">


    <TextView
        android:id="@+id/result_text_status2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Molo found a class for you!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:id="@+id/response_class_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_below="@+id/result_text_status2"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/response_class_population2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_below="@+id/response_class_name2"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/response_class_sound2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_below="@+id/response_class_population2"
        android:layout_marginTop="28dp" />

    <ImageView
        android:id="@+id/empty_class_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@+id/response_class_sound2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share_whatsapp_button"
        android:layout_below="@id/empty_class_image"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true"
        android:text="Share!"/>

</RelativeLayout>

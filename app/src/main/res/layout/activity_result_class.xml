<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/second_screen"
    tools:context="com.molo.tomermai.moloalpha.ResultClassActivity">

    <TextView
        android:id="@+id/result_text_status2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/response_class_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/result_text_status2"
        android:layout_marginTop="18dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/response_class_population2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/response_class_name2"
        android:layout_toStartOf="@+id/empty_class_image"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/response_class_sound2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBaseline="@+id/response_class_population2"
        android:layout_alignBottom="@+id/response_class_population2"
        android:layout_toEndOf="@+id/empty_class_image"
        android:textAlignment="center"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/empty_class_image"
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:layout_below="@+id/response_class_population2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <Button
        android:id="@+id/share_whatsapp_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/next_class_button"
        android:layout_marginBottom="40dp"
        android:layout_toEndOf="@+id/next_class_button"
        android:background="@android:color/holo_green_dark" />

    <Button
        android:id="@+id/next_class_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:background="@android:color/holo_green_light" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context="com.molo.tomermai.moloalpha.ResultClassActivity">

    <TextView
        android:id="@+id/result_text_status2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:text="Molo found a class for you!"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/response_class_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/result_text_status2"
        android:layout_marginTop="28dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/response_class_population2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/response_class_name2"
        android:layout_marginTop="28dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/response_class_sound2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/response_class_population2"
        android:layout_marginTop="28dp"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/empty_class_image"
        android:layout_width="142dp"
        android:layout_height="150dp"
        android:layout_below="@+id/response_class_sound2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <Button
        android:id="@+id/share_whatsapp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Share!" />

    <Button
        android:id="@+id/next_class_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/share_whatsapp_button"
        android:layout_alignStart="@+id/share_whatsapp_button"
        android:text="NEXT" />

</RelativeLayout>

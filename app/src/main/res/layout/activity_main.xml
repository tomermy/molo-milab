<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.molo.tomermai.moloalpha.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/getEmptyClassButton"
        android:id="@+id/get_class_button"
        android:layout_marginBottom="10dp"
        android:onClick="fetchClasses"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_text_status"
        android:layout_below="@+id/get_class_button"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/response_class_name"
        android:layout_below="@+id/result_text_status"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/response_class_population"
        android:layout_below="@+id/response_class_name"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/response_class_sound"
        android:layout_below="@+id/response_class_population"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/building_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/response_class_sound"
        android:hint="Building Name Filter" />

</RelativeLayout>
